{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["src", "test"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "files": ["src/global.d.ts"],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
