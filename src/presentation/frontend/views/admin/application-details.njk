{% extends 'base.njk' %}
{% block body %}
    <div class="fr-mt-4w container mx-auto mb-auto px-4">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    {{ application.name }}
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    {{ application.createdOn }}
                </p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5">
                {% for email in application.userEmails %}
                    <div class="border border-gray-200 px-4 my-2">
                        {{ email }}
                    </div>
                {% endfor %}
                <div class="flex flex-columns">
                    <form action="./users" method="POST">
                        <input class="border border-black flex-1" type="text" name="email"/>
                        <input type="submit" class="border border-black flex-1" value="Ajouter"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
